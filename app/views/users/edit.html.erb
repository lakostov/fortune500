<h1>Editing Account</h1>
<%= form_with(model: @user, local: true) do |form| %>
  <div id="row">
  <div class="col-lg-4 col-xl-4 col-md-4"></div>
  <div class="fortune-list col-lg-4 col-xl-4 col-md-4 sm-12 xs-12">
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <table>
      <tr>
    <td><%= form.label :first_name %></td>
    <td><%= form.text_field :first_name, id: :user_first_name %></td>
  </tr>
  <tr>
    <td><%= form.label :last_name %></td>
    <td><%= form.text_field :last_name, id: :user_last_name %></td>
  </tr>
  <tr>
    <td><%= form.label :username %></td>
    <td><%= form.text_field :username, id: :user_username %></td>
  </tr>
  <tr>
    <td><%= form.label :email %></td>
    <td><%= form.text_field :email, id: :user_email %></td>
  </tr>
  <tr>
  <td><%= form.label :password %></td>
  <td><%= form.password_field :password %></td>
  </tr>
  <tr>
  <td><%= form.label :password_confirmation, "Confirmation" %></td>
  <td><%= form.password_field :password_confirmation %></td>
  </tr>
  <tr>
    <td class="center" colspan="2"><%= form.submit "Edit account", class: "btn btn-primary" %></td>
  </tr>
  <tr>
    <td class="center" colspan="2"><%= link_to 'Back', @user %></td>
  </tr>
</table>
</div>
<div class="col-lg-4 col-xl-4 col-md-4"></div>
</div>
<% end %>
